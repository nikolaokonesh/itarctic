<div class="bg-white rounded p-2" data-controller="form-error">

  <%= form_with(model: @feedback, html: { data: { type: "html",
                     action: "ajax:error->form-error#onPostError" } }) do |form| %>

    <div class="text-danger p-2">Напишите ваше имя и контактные данные в содержании письма</div>

    <div class="sod">
      <%= form.rich_text_area :message, placeholder: 'Содержание письма', class: 'text-left text-dark' %>
    </div>

      <ul class="mt-2 lg:mt-0 block w-full post-errors" data-target="form-error.postErrors"></ul>
    <div class="px-2 mt-4 lg:flex">
      <div class="pr-5">
        <%= content_tag(:button, 'Отправить', type: 'submit', class: 'btn btn-success') %>
      </div>
    </div>

  <% end %>
</div>
